<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTintMode="src_atop"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kreon"
        android:gravity="center"
        android:text="Microsoft Teams"
        android:textColor="#212C6E"
        android:textSize="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/teamss"
        app:civ_border_width="2dp"
        app:civ_border_color="#918F8F"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/get_started"
        android:textSize="17dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_shape"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:hint="Enter Email, Phone, or Skype" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="18dp"
        android:text="Sign in"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Get help with signing in"
        android:textSize="18dp"
        android:clickable="true"
        android:textColor="#6F54AA"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sign in"
        android:textAllCaps="false"
        app:strokeColor="#888383"
        app:strokeWidth="2dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginHorizontal="10dp"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sign up for free"
        android:textAllCaps="false"
        app:icon="@drawable/microsoft"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconSize="25dp"
        app:strokeColor="#888383"
        app:strokeWidth="2dp"
        android:fontFamily="@font/roboto_bold"
        app:iconTint="@null"
        />


</LinearLayout>
